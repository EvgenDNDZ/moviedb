<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MovieList"></style>

    <style name="MovieList.MoviesItemInfoHolder" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/movies_item_info_container_conner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">@dimen/movies_item_info_container_padding</item>
        <item name="android:layout_margin">@dimen/movies_item_info_container_margin</item>

    </style>

    <style name="MovieList.MoviesItemImage">
        <item name="android:layout_width">@dimen/poster_thumb_width</item>
        <item name="android:layout_height">@dimen/poster_thumb_height</item>
    </style>

    <style name="MovieList.MoviesItemTitle" parent="WrappedView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MovieList.MoviesItemAdditionalInfo" parent="WrappedView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>